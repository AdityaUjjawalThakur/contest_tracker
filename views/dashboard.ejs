<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }
        .dashboard-container {
            max-width: 900px;
            margin: 40px auto;
        }
        .welcome {
            text-align: center;
            margin-bottom: 30px;
        }
        .contest-card {
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .contest-card h2 {
            font-size: 1.5rem;
            color: #0d6efd;
        }
        .contest-card p {
            margin: 5px 0;
        }
        .reminder-form label {
            font-weight: 500;
            margin-top: 10px;
        }
        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user}) %>
    <div class="dashboard-container">
        <div class="welcome">
            <h1>Welcome, <%= user.email %></h1>
           <form action="/register/otp" method="post">
        <input type="hidden" name="email" value="<%= user.email %>">
        <button type="submit" class="btn btn-primary">
            Verify Your Email
        </button>
    </form>
            <h2 class="text-secondary">Your Reminders</h2>
        </div>
        <% if(user.isverified){%>

        <% if (contests.length === 0) { %>
            <div class="alert alert-info text-center">
                You have zero reminders. Add one now!
            </div>
        <% } %>

        <% contests.forEach((contest) => { %>
            <div class="contest-card">
                <h2><%= contest.contest_title %></h2>
                <p><a href="<%= contest.contest_url %>" target="_blank" class="link-primary">
                    <%= contest.contest_url %>
                </a></p>
                <p><strong>Reminder Time:</strong> <%= contest.reminder_time.toLocaleString() %></p>

                <form action="/setreminder" method="POST" class="reminder-form">
                    <input type="hidden" name="contestUrl" value="<%= contest.contest_url %>">
                    <input type="hidden" name="contestTitle" value="<%= contest.contest_title %>">

                    <div class="mb-3">
                        <label for="reminder">Set Reminder:</label>
                        <input type="datetime-local" name="reminderTime" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="customMessage">Custom Message (Optional):</label>
                        <textarea name="customMessage" id="customMessage" class="form-control" rows="3"
                            placeholder="Enter your custom reminder here"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">Set Reminder</button>
                </form>
            </div>
        <% }) %>
        <% }else{%>
             <p class="mb-3 text-warning fw-bold">Verify Your Email To Set Reminders</p>
       <%  }%> 
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
