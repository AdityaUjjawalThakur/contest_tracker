<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet">
    <title>Home</title>
</head>
<body>
    <div class="container py-4">
       
  <h1 class="text-center mb-4">Upcoming Coding Contests</h1>
  <div class="row g-4">
 <% contests.forEach((contest) => { %>
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body d-flex flex-column">
        <img src="<%= contest.logo %>" alt="<%= contest.site %> logo" class="img-fluid mb-3" style="max-height: 60px; object-fit: contain;">
        <h5 class="card-title text-primary"><%= contest.site %></h5>
        <p class="card-text"><%= contest.title %></p>
        <p class="text-muted">Start: <%= new Date(contest.startTime).toLocaleString() %></p>
        <p class="text-muted">
          Duration: 
          <% 
            const hours = Math.floor(contest.duration / (1000 * 60 * 60));
            const minutes = Math.floor((contest.duration % (1000 * 60 * 60)) / (1000 * 60));
          %>
          <%= hours %>h <%= minutes %>m
        </p>
        <p class="text-muted">End: <%= new Date(contest.endTime).toLocaleString() %></p>
        <% if(contest.user){ %>
          <a href="<%= contest.url %>" target="_blank" class="btn btn-primary mt-auto">Go to Contest</a>
          <% } else{ %>
              <p class="text-muted">Login to view contest link</p>
            <% } %>
        
      </div>
    </div>
  </div>
<% }) %>

  </div>
</div>
 
    
    
</body>
</html>