<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
        rel="stylesheet">
    <title>Home</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card img {
            max-height: 60px;
            object-fit: contain;
        }
        .reminder-form label {
            font-weight: 500;
            margin-top: 8px;
        }
        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user }) %>
    
    <div class="container py-4">
        <h1 class="text-center mb-4 text-primary fw-bold">Upcoming Coding Contests</h1>
        <div class="row g-4">
            <% contests.forEach((contest) => { %>
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body d-flex flex-column">
                  
                        <div class="text-center mb-3">
                            <img src="<%= contest.logo %>" alt="<%= contest.site %> logo" class="img-fluid">
                        </div>
                        
                  
                        <h5 class="card-title text-primary text-center mb-2"><%= contest.site %></h5>
                        <p class="card-text text-center fw-semibold"><%= contest.title %></p>
                        
                        <ul class="list-unstyled text-muted small mb-3">
                            <li><strong>Start:</strong> <%= new Date(contest.startTime).toLocaleString() %></li>
                            <li><strong>End:</strong> <%= new Date(contest.endTime).toLocaleString() %></li>
                            <li>
                                <strong>Duration:</strong>
                                <% 
                                    const hours = Math.floor(contest.duration / (1000 * 60 * 60));
                                    const minutes = Math.floor((contest.duration % (1000 * 60 * 60)) / (1000 * 60));
                                %>
                                <%= hours %>h <%= minutes %>m
                            </li>
                        </ul>
                        
                    
                        <% if(contest.user){ %>
                            <a href="<%= contest.url %>" target="_blank" class="btn btn-primary mb-3">Go to Contest</a>
                        <% } else { %>
                            <p class="text-muted text-center">Login to view contest link</p>
                        <% } %>
                        <% if (user) { %>
    <% if (user.isverified) { %>
        <!-- Reminder Form -->
        <form action="/setreminder" method="POST" class="reminder-form mt-auto">
            <input type="hidden" name="contestUrl" value="<%= contest.url %>">
            <input type="hidden" name="contestTitle" value="<%= contest.title %>">

            <div class="mb-2">
                <label for="reminder" class="form-label">Set Reminder:</label>
                <input type="datetime-local" name="reminderTime" class="form-control" required>
            </div>

            <div class="mb-2">
                <label for="custoMessage" class="form-label">Custom Message (Optional):</label>
                <textarea name="custoMessage" id="custoMessage" class="form-control" rows="2" placeholder="Enter your custom reminder here"></textarea>
            </div>

            <button type="submit" class="btn btn-success w-100">Set Reminder</button>
        </form>
    <% } else { %>
        <p class="text-muted text-center">Verify your email to set reminders</p>
    <% } %>
<% } else { %>
    <p class="text-muted text-center">Login to set reminders</p>
<% } %>
                        
                
          
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
